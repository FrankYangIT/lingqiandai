<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.frank.mybizhi.activity.ImageDetailsActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/details_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/details_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/detailsTitleBackColor"
        >
        <Button
            android:id="@+id/details_title_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="back"
            android:layout_height="match_parent"
            android:background="@drawable/details_iamge_back_selector"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="22sp"
            android:text="@string/imageDetails"/>
        <Button
            android:id="@+id/details_title_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/details_iamge_share_selector"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/detailsdownSelector_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/detailsTitleBackColor"
        >

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/collect"
            android:onClick="collect"
            android:textColor="@color/details_tab_textcolor_selector"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/detailsunderbackgroud_selector"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:onClick="setWallPager"
            android:textColor="@color/details_tab_textcolor_selector"
            android:text="@string/setAsWallpaper"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/detailsunderbackgroud_selector"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/downLoad"
            android:textColor="@color/details_tab_textcolor_selector"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/detailsunderbackgroud_selector"/>
    </LinearLayout>
</RelativeLayout>
